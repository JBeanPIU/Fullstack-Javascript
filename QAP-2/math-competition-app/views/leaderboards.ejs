        </div>
    </div>
    <div class="center"><!-- main body -->
        <h2>Top 10 Streaks</h2>
            <table>
                <tbody>
                    <% leaderboards.forEach((entry, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= entry.streak %></td>
                            <td><%= entry.questionsAnswered %></td>
                            <td><%= entry.dateObtained %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
    
            <% if (leaderboards.length === 0) { %>
                <p>No records yet. Get to it!</p>
            <% } %>
    </div>
